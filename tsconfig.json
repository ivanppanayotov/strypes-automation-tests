{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./baseClass/**/*.ts",
    "./configs/**/*.ts",
    "./custom-methods/**/*.ts",
    "./pom/**/*.ts",
    "./tests/**/*.ts",
    "./*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
